{
  "name": "mambo-whistle",
  "version": "0.1.0",
  "type": "module",
  "description": "Mambo Whistle: Makes Any Mouth Become Orchestra. A real-time neural vocal synthesis engine with embedded hardware.",
  "main": "index.html",
  "scripts": {
    "predev": "./kill-port.sh 3000 2>/dev/null || true",
    "dev": "npx serve . -p 3000",
    "prestart": "./kill-port.sh 3000 2>/dev/null || true",
    "start": "npx serve . -p 3000",
    "clean": "./kill-port.sh 3000",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "node tests/run-all-tests.js",
    "test:legacy:report": "node tests/run-all-tests.js --report",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "validate": "npm run typecheck && npm test",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lhci autorun --collect.settings.preset=desktop",
    "lighthouse:mobile": "lhci autorun --collect.settings.preset=mobile",
    "perf": "npm run lighthouse:desktop",
    "deploy": "vercel --prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Team-Kazoo/mambo.git"
  },
  "keywords": [
    "audio",
    "pitch-detection",
    "web-audio",
    "tone.js",
    "yin-algorithm",
    "real-time",
    "music",
    "synthesizer"
  ],
  "author": "Ziming Wang",
  "license": "Proprietary",
  "dependencies": {
    "pitchfinder": "^2.3.2",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "@lhci/cli": "^0.14.0",
    "@vitest/ui": "^4.0.6",
    "happy-dom": "^20.0.10",
    "serve": "^14.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
